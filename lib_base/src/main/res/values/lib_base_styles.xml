<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="lib_base_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textAllCaps">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/lib_base_colorPrimary</item>
        <item name="colorPrimaryDark">@color/lib_base_colorPrimaryDark</item>
        <item name="colorAccent">@color/lib_base_colorAccent</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="lib_base_BaseDialogFragmentStyle" parent="Theme.AppCompat.Light.Dialog" tools:ignore="ResourceName">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowSoftInputMode">adjustPan</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="lib_base_BaseDialogFragment_DefaultAnimation" parent="android:Animation" tools:ignore="ResourceName">
        <item name="android:windowEnterAnimation">@anim/lib_base_basedialogfragment_enter_anim
        </item>
        <item name="android:windowExitAnimation">@anim/lib_base_basedialogfragment_exit_anim</item>
    </style>

    <style name="dialog_helper" parent="@android:style/Theme.Dialog" tools:ignore="ResourceName">
        <item name="android:windowFrame">@null</item> <!-- 边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <!--加载提示框-->
    <style name="CustomProgressDialog" parent="@style/CustomDialog" tools:ignore="ResourceName">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="CustomDialog" parent="@android:style/Theme.Dialog" tools:ignore="ResourceName">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <declare-styleable name="SwitchButton" tools:ignore="ResourceName">
        <attr name="buttonColor" format="color" />
    </declare-styleable>


</resources>
