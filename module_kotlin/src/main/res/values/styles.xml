<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar" tools:ignore="ResourceName">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/lib_base_colorPrimary</item>
        <item name="colorPrimaryDark">@color/design_default_color_primary_dark</item>
        <item name="colorAccent">@color/lib_base_colorAccent</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme" tools:ignore="ResourceName"/>

    <style name="AppTheme.NoActionBar" tools:ignore="ResourceName">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" tools:ignore="ResourceName"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" tools:ignore="ResourceName"/>

</resources>
