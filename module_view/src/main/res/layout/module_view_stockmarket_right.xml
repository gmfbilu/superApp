<?xml version="1.0" encoding="utf-8"?>
<org.gmfbilu.superapp.module_view.recyclerView.baseRecyclerViewAdapter.stockMarket.StockMarketHorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rightTitleHorscrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item1"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|end"
            android:text="委托/均价"
            android:textColor="#9094A7"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item2"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|end"
            android:text="委托/成交"
            android:textColor="#9094A7"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item3"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|end"
            android:text="状态"
            android:textColor="#9094A7"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item4"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|end"
            android:text="委托单号"
            android:textColor="#9094A7"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item5"
            android:layout_width="77dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|end"
            android:text="委托时间"
            android:textColor="#9094A7"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_item6"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="15dp"
            android:gravity="center|end"
            android:text="备注"
            android:textColor="#9094A7"
            android:textSize="12sp" />

    </LinearLayout>
</org.gmfbilu.superapp.module_view.recyclerView.baseRecyclerViewAdapter.stockMarket.StockMarketHorizontalScrollView>