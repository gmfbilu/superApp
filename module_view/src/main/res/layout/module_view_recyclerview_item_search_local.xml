<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_shop_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@color/lib_base_colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:text="全家便利店（望京店"
        android:textColor="#333333"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/iv_shop_img"
        app:layout_constraintTop_toTopOf="@+id/iv_shop_img"/>

    <ImageView
        android:id="@+id/iv_shop_type"
        android:layout_width="52dp"
        android:layout_height="14dp"
        android:layout_marginTop="6dp"
        android:background="@color/lib_base_colorAccent"
        app:layout_constraintLeft_toLeftOf="@+id/tv_shop_name"
        app:layout_constraintLeft_toRightOf="@+id/iv_shop_img"
        app:layout_constraintTop_toBottomOf="@+id/tv_shop_name"/>

    <org.gmfbilu.superapp.module_view.customViews.ratingBar.RatingBar
        android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/iv_shop_type"
        app:layout_constraintTop_toBottomOf="@+id/iv_shop_type"/>

    <ImageView
        android:id="@+id/ImageViewOne"
        android:layout_width="9dp"
        android:layout_height="12dp"
        android:src="@mipmap/search_center_location"
        app:layout_constraintBottom_toBottomOf="@+id/iv_shop_img"
        app:layout_constraintLeft_toLeftOf="@+id/ratingbar"/>

    <TextView
        android:id="@+id/tv_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="4dp"
        android:text="萧山·宁围"
        android:textColor="#999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_shop_img"
        app:layout_constraintLeft_toRightOf="@+id/ImageViewOne"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="862m"
        android:textColor="#999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_shop_img"
        app:layout_constraintLeft_toRightOf="@+id/tv_location"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="18dp"
        android:background="#F3F3F3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_shop_img"/>
</androidx.constraintlayout.widget.ConstraintLayout>