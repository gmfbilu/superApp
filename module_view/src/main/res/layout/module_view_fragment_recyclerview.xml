<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/module_view_bt_easy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="简单!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/module_view_bt_header_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="加头加尾!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/module_view_bt_easy"/>

    <Button
        android:id="@+id/module_view_bt_multitype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="多种类型item!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/module_view_bt_header_footer"/>

    <Button
        android:id="@+id/module_view_bt_sticky_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="滑动固定头部!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/module_view_bt_multitype"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/module_view_bt_baserecyclerviewadapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BaseRecyclerViewAdapterHelper"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/module_view_bt_multitype"/>

</androidx.constraintlayout.widget.ConstraintLayout>