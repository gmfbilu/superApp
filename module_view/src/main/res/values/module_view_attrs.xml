<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <declare-styleable name="module_view_CircleProgressBar">
        <attr name="module_view_progressWidth" format="dimension"/>
        <attr name="module_view_progressColor" format="color"/>
        <attr name="module_view_circleAnimationDuration" format="integer"/>
        <attr name="module_view_isDrawCenterProgressText" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="WheelPicker" tools:ignore="ResourceName">
        <attr name="scroll_data" format="reference"/>
        <attr name="scroll_background_color" format="color"/>
        <attr name="scroll_selected_item_background" format="color"/>
        <attr name="scroll_selected_item_position" format="integer"/>
        <attr name="scroll_item_text_size" format="dimension"/>
        <attr name="scroll_item_text_color" format="color"/>
        <attr name="scroll_selected_item_text_color" format="color"/>
        <attr name="scroll_maximum_width_text" format="string"/>
        <attr name="scroll_maximum_width_text_position" format="integer"/>
        <attr name="scroll_visible_item_count" format="integer"/>
        <attr name="scroll_item_space" format="dimension"/>
        <attr name="scroll_indicator" format="boolean"/>
        <attr name="scroll_indicator_color" format="color"/>
        <attr name="scroll_indicator_size" format="dimension"/>
        <attr name="scroll_atmospheric" format="boolean"/>
        <attr name="scroll_item_align" format="enum">
            <enum name="center" value="0"/>
            <enum name="left" value="1"/>
            <enum name="right" value="2"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="WheelView" tools:ignore="ResourceName">
        <attr name="unitHeight" format="dimension" />
        <attr name="itemNumber" format="integer" />
        <attr name="normalTextColor" format="color" />
        <attr name="normalTextSize" format="dimension" />
        <attr name="selectedTextColor" format="color" />
        <attr name="selectedTextSize" format="dimension" />
        <attr name="lineColor" format="color" />
        <attr name="lineHeight" format="dimension" />
        <attr name="maskHeight" format="dimension" />
        <attr name="noEmpty" format="boolean" />
        <attr name="isEnable" format="boolean" />
    </declare-styleable>
</resources>