<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="DialogFullscreen" parent="@android:style/Theme.Material.Light.DialogWhenLarge" tools:ignore="ResourceName">
        <item name="android:windowNoTitle">true</item>
        <item name="android:statusBarColor">@color/lib_base_colorAccent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <!--custom_dialog-->
    <style name="custom_dialog" parent="@android:style/Theme.Dialog" tools:ignore="ResourceName">
        <item name="android:windowFrame">@null</item> <!-- 边框 -->
        <item name="android:windowIsFloating">true</item> <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item> <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item> <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="RedPocketDialogFragmentEnterExitAnimation" parent="android:Animation" tools:ignore="ResourceName">
        <item name="android:windowEnterAnimation">@anim/dialogfragment_redpocket_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialogfragment_redpocket_exit_anim</item>
    </style>

    <style name="LoadingDialogFragment" parent="lib_base_BaseDialogFragmentStyle" tools:ignore="ResourceName">
        <item name="colorAccent">@color/lib_base_colorAccent</item>
    </style>


    <style name="module_view_AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="module_view_AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="module_view_Toolbar_TextAppearance_White">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="module_view_Toolbar_TextAppearance_Expanded">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="module_view_AppTheme.NoActionBar.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="module_view_AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="module_view_tab_appearance">
        <item name="android:textSize">16sp</item>
    </style>


    <style name="RadioButton" tools:ignore="ResourceName">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/rg_text</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>
