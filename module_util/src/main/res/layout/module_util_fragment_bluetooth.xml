<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_check_support_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查看你的设备是否支持蓝牙"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_open_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开蓝牙"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_check_support_bluetooth"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_close_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关闭蓝牙"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_open_bluetooth"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_find_matched_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查找已经配对过的蓝牙"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_close_bluetooth"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_find_bluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="查找附近的蓝牙"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_find_matched_bluetooth"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/bt_attached_other"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="本地设备可被其它设备检测到"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_find_bluetooth"/>

</android.support.constraint.ConstraintLayout>