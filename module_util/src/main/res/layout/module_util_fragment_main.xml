<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/module_util_bt_permissions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Permissions!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <Button
        android:id="@+id/module_util_bt_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Camera!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/module_util_bt_permissions"/>

    <Button
        android:id="@+id/module_util_bt_thirdCamera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="第三方Camera!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/module_util_bt_camera"/>

    <Button
        android:id="@+id/module_util_bt_surfaceView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SurfaceView!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/module_util_bt_thirdCamera"/>

    <Button
        android:id="@+id/module_util_bt_jni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JNI!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/module_util_bt_surfaceView"/>

    <Button
        android:id="@+id/module_util_bt_aidl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AIDL!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/module_util_bt_jni"/>

    <Button
        android:id="@+id/module_util_bt_dynamicLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dynamic Layout!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/module_util_bt_aidl"/>

    <Button
        android:id="@+id/module_util_bt_shape"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="shape!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/module_util_bt_dynamicLayout"/>

    <Button
        android:id="@+id/module_util_bt_aop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AOP!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/module_util_bt_shape"/>

    <Button
        android:id="@+id/module_util_bt_recyclerview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EasyRecyclerView!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/module_util_bt_aop"/>

    <Button
        android:id="@+id/module_util_bt_glide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="glide!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/module_util_bt_recyclerview"/>

    <Button
        android:id="@+id/module_util_bt_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/module_util_bt_recyclerview"/>

    <Button
        android:id="@+id/module_util_bt_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动画!"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/module_util_bt_search"/>

</android.support.constraint.ConstraintLayout>